@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Index";
}

<partial name="OgrenciPartial" />

<br />

<table class="table table-dark table-sm">
    <thead>
        <tr>
            <th colspan="7" style="text-align:center">Öğrenciler</th>
        </tr>
        <tr>
            <th>ID</th>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>Numara</th>
            <th>Sınıf Adı</th>
            <th>Sınıf ID</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OgrenciId</td>
                <td>@item.Isim</td>
                <td>@item.Soyisim</td>
                <td>@item.Numara</td>
                <td>@item.Sinif.SinifAdi</td>
                <td>@item.SinifId</td>
                <td>
                    <a asp-action="OgrenciDuzenle" asp-controller="Ogrenci" asp-route-id="@item.OgrenciId" class="btn btn-primary">Düzenle</a>
                    <a asp-action="OgrenciSil" asp-controller="Ogrenci" asp-route-id="@item.OgrenciId" class="btn btn-danger" onclick="return confirm('Emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>