@model IEnumerable<Sinif>
@{
    ViewData["Title"] = "Index";
}

<partial name="SinifPartial" />

<br />

<table class="table table-dark table-sm">
    <thead>
        <tr>
            <th colspan="5" style="text-align:center">Sınıflar</th>
        </tr>
        <tr>
            <th>ID</th>
            <th>Sınıf Adı</th>
            <th>Kontenjan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SinifId</td>
                <td>@item.SinifAdi</td>
                <td>@item.Kontenjan</td>
                <td>
                    <a asp-action="SinifDuzenle" asp-controller="Sinif" asp-route-id="@item.SinifId" class="btn btn-primary">Düzenle</a>
                    <a asp-action="SinifSil" asp-controller="Sinif" asp-route-id="@item.SinifId" class="btn btn-danger" onclick="return confirm('Emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>